<% provide(:title, "Ordem #{@order.id}" ) %>

<%= form_for(@order, :html => { :class => "form-horizontal" }) do |f| %>
  <%= render 'shared/order_error_messages' %>

  <h1><%= @order.name %></h1>

  <div class="row">
  <div class="span6 offset3">

    <%= f.label :name, "Designação" %>
    <%= f.text_field :name, :disabled => 'disabled' %>

    <%= f.label :total_value, "Total" %>
    <%= f.text_field :total_value, :disabled => 'disabled' %>

    <%= f.label :state, "Estado" %>
    <%= f.text_field :state, :disabled => 'disabled' %>

    <%= f.label :state_date, "Em" %>
    <%= f.text_field :state_date, :disabled => 'disabled' %>

    <br/>

    <%= link_to 'Editar', edit_order_path(@order), class: "btn btn-group-sm btn-info" %>
    <%= link_to 'Voltar Atrás', orders_path, class: "btn btn-group-sm btn-info" %>
    </div>
  </div>
<% end %>


<%= render 'listinha' %>
