<% provide(:title, 'Quotas Clube') %>
<h1>Quotas Clube</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Ano Validade</th>
      <th>Valor</th>
      <th>Activo</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @club_fees.each do |club_fee| %>
      <tr>
        <td><%= club_fee.name %></td>
        <td><%= club_fee.valid_year %></td>
        <td><%= club_fee.value %></td>
        <td>
            <span class="glyphicon glyphicon-ok" style="color:<%= club_fee.active ? "green" : "red" %>"></span>
        </td>
        <td class="tabButtons">
          <%= link_to '<span class="glyphicon glyphicon-eye-open"></span>'.html_safe, club_fee, class: "btn btn-group-md btn-info", title: "Ver" %>
          <%= link_to "<span class='glyphicon glyphicon-edit'></span>".html_safe, edit_club_fee_path(club_fee), class: "btn btn-group-md btn-success", title: "Editar" %>
          <%= link_to '<span class="glyphicon glyphicon-remove"></span>'.html_safe, club_fee, method: :delete, data: { confirm: 'Tem a certeza?' }, class: "btn btn-group-md btn-danger", title: "Apagar" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>

<br>

<%= link_to '<span class="glyphicon glyphicon-plus"></span> Nova Quota Clube'.html_safe, new_club_fee_path, class: "btn btn-group-md btn-success", title: "Nova Quota Clube" %>
