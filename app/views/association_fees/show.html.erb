<% provide(:title, "Quota Associativa: #{@association_fee.name}" ) %>

<%= form_for(@association_fee, :html => { :class => "form-horizontal" }) do |f| %>
  <%= render 'layouts/inner_error_messages', {:msg => @association_fee} %>

  <h1><%= @association_fee.name %></h1>

  <div class="form-single">

    <%= f.label :valid_year %>
    <%= f.text_field :valid_year, :disabled => 'disabled' %>

    <%= f.label :value %>
    <%= f.text_field :value, :disabled => 'disabled' %>

    <%= f.label :is_total %>
    <%= f.check_box :is_total, :disabled => 'disabled' %>

    <%= f.label :active %>
    <%= f.check_box :active, :disabled => 'disabled' %>

    <br/><br/>

    <%= link_to "<span class='glyphicon glyphicon-edit'></span>".html_safe, edit_association_fee_path(@association_fee), class: "btn btn-group-md btn-success", title: "Editar" %>
    <%= link_to '<span class="glyphicon glyphicon-th-list"></span>'.html_safe, association_fees_path, class: "btn btn-group-md btn-info", title: 'Voltar AtrÃ¡s' %>

  </div>
<% end %>


