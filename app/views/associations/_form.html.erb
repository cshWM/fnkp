<%= form_for(@association) do |f| %>
  <%= render 'shared/association_error_messages' %>

  <div class="row">
  <div class="span6 offset3">

    <%= f.label :short_name, "Sigla da Associação" %>
    <%= f.text_field :short_name %>

    <%= f.label :name, "Nome da Associação" %>
    <%= f.text_field :name %>

    <%= f.label :address, "Endereço" %>
    <%= f.text_field :address %>

    <%= f.label :postal4, "Código Postal (4)" %>
    <%= f.text_field :postal4 %>

    <%= f.label :postal3, "Código Postal (3)" %>
    <%= f.text_field :postal3 %>

    <%= f.label :city, "Cidade" %>
    <%= f.text_field :city %>

    <%= f.label :phone, "Telefone" %>
    <%= f.text_field :phone %>

    <% if @association.new_record? %>
        <%= f.label :email, "Email" %>
        <%= f.text_field :email %>
    <% else %>
        <%= f.label :email, "Email" %>
        <%= f.text_field :email, :disabled => 'disabled' %>
    <% end %>

    <%= f.label :president, "Presidente" %>
    <%= f.text_field :president %>

    <%= f.label :url, "Site Internet" %>
    <%= f.text_field :url %>


    <%= f.submit "Gravar", class: "btn btn-sm btn-success" %>
    </div>
  </div>
<% end %>
