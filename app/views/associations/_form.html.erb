<%= form_for(@association) do |f| %>
  <%= render 'layouts/inner_error_messages', {:msg => @association} %>

    <%= f.label :short_name %>
    <%= f.text_field :short_name %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :address %>
    <%= f.text_field :address %>

    <%= f.label :postal4 %>
    <%= f.text_field :postal4 %>

    <%= f.label :postal3 %>
    <%= f.text_field :postal3 %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :phone %>
    <%= f.text_field :phone %>

    <% if @association.new_record? %>
        <%= f.label :email %>
        <%= f.text_field :email %>
    <% else %>
        <%= f.label :email %>
        <%= f.text_field :email, :disabled => 'disabled' %>
    <% end %>

    <%= f.label :president %>
    <%= f.text_field :president %>

    <%= f.label :url %>
    <%= f.text_field :url %>

    <br/><br/>

    <%= f.submit "Gravar", class: "btn btn-md btn-success" %>

<% end %>
