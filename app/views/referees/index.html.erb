<% provide(:title, 'Técnicos de Arbitragem') %>
<h1>Técnicos de Arbitragem</h1>

<table class="table">
  <thead>
    <tr>
      <th>Cod. FNKP</th>
      <th>Grau</th>
      <th>Nome</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @referees.each do |referee| %>
      <tr>
        <td><%= referee.fnkp_code %></td>
        <td><%= referee.referee_categories.first.name if referee.referee_categories.length > 0 %></td>
        <td><%= referee.official_name %></td>

        <td>
          <%= link_to 'Ver', referee, class: "btn btn-group-sm btn-info" %>
          <%= link_to 'Editar', edit_referee_path(referee), class: "btn btn-group-sm btn-success" %>
          <%= link_to 'Apagar', referee, method: :delete, data: { confirm: 'Tem a certeza?' }, class: "btn btn-group-sm btn-danger" %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>

<br>

<%= link_to 'Novo Técnico de Arbitragem', new_referee_path, class: "btn btn-group-sm btn-success" %>
