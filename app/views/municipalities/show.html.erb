
<% provide(:title, "Concelho: #{@municipality.name}" ) %>

<%= form_for(@municipality, :html => { :class => "form-horizontal" }) do |f| %>
  <%= render 'layouts/inner_error_messages', {:msg => @municipality} %>

  <h1><%= @municipality.name %></h1>

  <div class="form-single">

    <%= f.label :district, "Distrito" %>
    <%= f.text_field :district, :value => "#{@municipality.district.name}", :disabled => 'disabled' %>

    <%= f.label :active, "Activo" %>
    <%= f.check_box :active, :disabled => 'disabled' %>

    <br/><br/>

    <%= link_to "<span class='glyphicon glyphicon-edit'></span>".html_safe, edit_municipality_path(@municipality), class: "btn btn-group-md btn-success", title: "Editar" %>
    <%= link_to '<span class="glyphicon glyphicon-th-list"></span>'.html_safe, municipalities_path, class: "btn btn-group-md btn-info", title: 'Voltar AtrÃ¡s' %>
  </div>
<% end %>

