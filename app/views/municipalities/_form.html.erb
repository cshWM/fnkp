<%= form_for(@municipality) do |f| %>

  <%= render 'layouts/inner_error_messages', {:msg => @municipality} %>

      <%= f.label :name, "Concelho" %>
      <%= f.text_field :name %>

      <%= f.label :district_id, "Distrito" %>
      <%= f.collection_select :district_id, District.all, :id, :name, :selected => (@municipality.district.present? and @municipality.district.id) %>

      <%= f.label :active, "Activo" %>
      <%= f.check_box :active %>

      <br/><br/>

      <%= f.submit "Gravar", class: "btn btn-md btn-success" %>

<% end %>
