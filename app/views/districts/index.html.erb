<% provide(:title, 'Distritos') %>
<h1>Distritos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Distrito</th>
      <th>Regi√£o</th>
      <th>Activo</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @districts.each do |district| %>
      <tr>
        <td><%= district.name %></td>
        <td><%= district.region.name %></td>
        <td>
            <span class="glyphicon glyphicon-ok" style="color:<%= district.active ? "green" : "red" %>"></span>
        </td>

        <td class="tabButtons">
          <%= link_to '<span class="glyphicon glyphicon-eye-open"></span>'.html_safe, district, class: "btn btn-group-md btn-info", title: "Ver" %>
          <%= link_to "<span class='glyphicon glyphicon-edit'></span>".html_safe, edit_district_path(district), class: "btn btn-group-md btn-success", title: "Editar" %>
          <%= link_to '<span class="glyphicon glyphicon-remove"></span>'.html_safe, district, method: :delete, data: { confirm: 'Tem a certeza?' }, class: "btn btn-group-md btn-danger", title: "Apagar" %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>

<br>

<%= link_to '<span class="glyphicon glyphicon-plus"></span> Novo Distrito'.html_safe, new_district_path, class: "btn btn-group-md btn-success", title: "Novo Distrito" %>
