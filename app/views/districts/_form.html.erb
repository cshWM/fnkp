<%= form_for(@district) do |f| %>

  <%= render 'layouts/inner_error_messages', {:msg => @district} %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :region_id %>
      <%= f.collection_select :region_id, Region.all, :id, :name, {:selected => (@district.region.present? and @district.region.id), :required => true} %>

      <%= f.label :active %>
      <%= f.check_box :active %>

      <br/><br/>

      <%= f.submit "Gravar", class: "btn btn-md btn-success" %>

<% end %>
