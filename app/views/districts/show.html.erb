
<% provide(:title, "Distrito: #{@district.name}" ) %>

<%= form_for(@district, :html => { :class => "form-horizontal" }) do |f| %>
  <%= render 'layouts/inner_error_messages', {:msg => @district} %>

  <h1><%= @district.name %></h1>

  <div class="form-single">

    <%= f.label :region %>
    <%= f.text_field :region, :value => "#{@district.region.name}", :disabled => 'disabled' %>

    <%= f.label :active %>
    <%= f.check_box :active, :disabled => 'disabled' %>

    <br/><br/>

    <%= link_to "<span class='glyphicon glyphicon-edit'></span>".html_safe, edit_district_path(@district), class: "btn btn-group-md btn-success", title: "Editar" %>
    <%= link_to '<span class="glyphicon glyphicon-th-list"></span>'.html_safe, districts_path, class: "btn btn-group-md btn-info", title: 'Voltar AtrÃ¡s' %>
  </div>
<% end %>

