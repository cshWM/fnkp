
<% provide(:title, "Distrito: #{@district.name}" ) %>

<%= form_for(@district, :html => { :class => "form-horizontal" }) do |f| %>
  <%= render 'shared/regions_error_messages' %>

  <h1><%= @district.name %></h1>

  <div class="row">
  <div class="span6 offset3">

    <%= f.label :region, "Região" %>
    <%= f.text_field :region, :value => "#{@district.region.name}", :disabled => 'disabled' %>

    <%= f.label :active, "Activo" %>
    <%= f.check_box :active, :disabled => 'disabled' %>

    <br/><br/>

    <%= link_to 'Editar', edit_district_path(@district), class: "btn btn-group-sm btn-info" %>
    <%= link_to 'Voltar Atrás', districts_path, class: "btn btn-group-sm btn-info" %>
    </div>
  </div>
<% end %>

