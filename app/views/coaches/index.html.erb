<% provide(:title, 'Treinadores') %>
<h1>Treinadores</h1>

<table class="table">
  <thead>
    <tr>
      <th>Cod. FNKP</th>
      <th>Cod. IPDJ</th>
      <th>Grau</th>
      <th>Nome</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @coaches.each do |coach| %>
      <tr>
        <td><%= coach.fnkp_code %></td>
        <td><%= coach.ipdj_code %></td>
        <td><%= coach.coach_categories.first.name if coach.coach_categories.length > 0 %></td>
        <td><%= coach.official_name %></td>

        <td>
          <%= link_to 'Ver', coach, class: "btn btn-group-sm btn-info" %>
          <%= link_to 'Editar', edit_coach_path(coach), class: "btn btn-group-sm btn-success" %>
          <%= link_to 'Apagar', coach, method: :delete, data: { confirm: 'Tem a certeza?' }, class: "btn btn-group-sm btn-danger" %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>

<br>

<%= link_to 'Novo Treinador', new_coach_path, class: "btn btn-group-sm btn-success" %>
