
<% provide(:title, "Região: #{@region.name}" ) %>

<%= form_for(@region, :html => { :class => "form-horizontal" }) do |f| %>
  <%= render 'layouts/inner_error_messages', {:msg => @region} %>

  <h1><%= @region.name %></h1>

  <div class="form-single">

    <%= f.label :order, "Ordem" %>
    <%= f.text_field :order, :disabled => 'disabled' %>

    <%= f.label :active, "Activa" %>
    <%= f.check_box :active, :disabled => 'disabled' %>

    <br/><br/>

    <%= link_to "<span class='glyphicon glyphicon-edit'></span>".html_safe, edit_region_path(@region), class: "btn btn-group-md btn-success", title: "Editar" %>
    <%= link_to '<span class="glyphicon glyphicon-th-list"></span>'.html_safe, regions_path, class: "btn btn-group-md btn-info", title: 'Voltar Atrás' %>
  </div>
<% end %>


