
<% provide(:title, "Região: #{@region.name}" ) %>

<%= form_for(@region, :html => { :class => "form-horizontal" }) do |f| %>
  <%= render 'shared/regions_error_messages' %>

  <h1><%= @region.name %></h1>

  <div class="row">
  <div class="span6 offset3">

    <%= f.label :order, "Ordem" %>
    <%= f.text_field :order, :disabled => 'disabled' %>

    <%= f.label :active, "Activa" %>
    <%= f.check_box :active, :disabled => 'disabled' %>

    <br/><br/>

    <%= link_to 'Editar', edit_region_path(@region), class: "btn btn-group-sm btn-info" %>
    <%= link_to 'Voltar Atrás', regions_path, class: "btn btn-group-sm btn-info" %>
    </div>
  </div>
<% end %>

