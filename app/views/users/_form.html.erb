<%= form_for(@user) do |f| %>

  <%= render 'layouts/inner_error_messages', {:msg => @user} %>



    <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :tipo %>
      <fieldset class="radio_horizontal">
      <%= f.radio_button :tipo, 1 %>
      <%= f.label :tipo, "Administrator", :value => 1 %>
      <%= f.radio_button :tipo, 2 %>
      <%= f.label :tipo, "Associação", :value => 2 %>
      <%= f.radio_button :tipo, 3 %>
      <%= f.label :tipo, "Clube", :value => 3 %>
      </fieldset>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation  %>
      <%= f.password_field :password_confirmation %>

      <br/><br/>

      <%= f.submit "Gravar", class: "btn btn-md btn-success" %>

<% end %>
