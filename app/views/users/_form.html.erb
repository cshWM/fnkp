<%= form_for(@user) do |f| %>

  <div class="row">
    <div class="span6 offset3">
    <%= render 'shared/error_messages' %>

    <%= f.label :name, "Nome" %>
      <%= f.text_field :name %>

      <%= f.label :email, "Email" %>
      <%= f.text_field :email %>

      <%= f.label :tipo %>
      <%= f.number_field :tipo %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmação de Password"  %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Gravar", class: "btn btn-sm btn-success" %>
    </div>
  </div>
<% end %>
