<% provide(:title, @user.email) %>

<%= form_for(@user, :html => { :class => "form-horizontal" }) do |f| %>
  <%= render 'layouts/inner_error_messages', {:msg => @region} %>

  <h1><%= @user.name %></h1>

  <div class="form-single">

    <%= f.label :name, "Nome" %>
    <%= f.text_field :name, :disabled => 'disabled' %>

    <%= f.label :email, "Email" %>
      <%= f.text_field :email, :disabled => 'disabled' %>

      <%= f.label :tipo %>
      <%= f.number_field :tipo, :disabled => 'disabled' %>


    <br/><br/>

    <%= link_to "<span class='glyphicon glyphicon-edit'></span>".html_safe, edit_user_path(@user), class: "btn btn-group-md btn-success", title: "Editar" %>
    <%= link_to '<span class="glyphicon glyphicon-th-list"></span>'.html_safe, users_path, class: "btn btn-group-md btn-info", title: 'Voltar AtrÃ¡s' %>
  </div>
<% end %>
