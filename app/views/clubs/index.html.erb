<% provide(:title, 'Clubes') %>
<h1>Clubes</h1>

<% if @clubs.length > 0 %>
  <table class="table">
    <thead>
      <tr>
        <th>Sigla</th>
        <th>Designação</th>
        <th>Concelho</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @clubs.each do |club| %>
        <tr>
          <td><%= club.short_name %></td>
          <td><%= club.name %></td>
          <td><%= Municipality.find( club.municipality_id).name %></td>

          <td class="tabButtons">
          <%= link_to '<span class="glyphicon glyphicon-eye-open"></span>'.html_safe, club, class: "btn btn-group-md btn-info", title: "Ver" %>
          <%= link_to "<span class='glyphicon glyphicon-edit'></span>".html_safe, edit_club_path(club), class: "btn btn-group-md btn-success", title: "Editar" %>
          <%= link_to '<span class="glyphicon glyphicon-remove"></span>'.html_safe, club, method: :delete, data: { confirm: 'Tem a certeza?' }, class: "btn btn-group-md btn-danger", title: "Apagar" %>
        </td>

        </tr>
      <% end %>
    </tbody>
  </table>

  <%= will_paginate %>
<% else %>
  Ainda não possui clubes.
  <br/>
  <br/>
  Clique no botão "Novo Clube" e inicie a sua actividade federativa!
  <br/>
<% end %>


<br>
<% if is_association? %>
  <%= link_to '<span class="glyphicon glyphicon-plus"></span> Novo Clube'.html_safe, new_club_path, class: "btn btn-group-md btn-success", title: "Novo clube" %>
<% end %>
