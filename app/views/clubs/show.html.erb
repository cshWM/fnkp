
<% provide(:title, "Clube: #{@club.short_name}" ) %>

<%= form_for(@club, :html => { :class => "form-horizontal" }) do |f| %>
  <%= render 'shared/error_messages' %>

  <h1><%= @club.short_name %></h1>

  <div class="row">
  <div class="span6 offset3">

    <%= f.label :name %>
    <%= f.text_field :name, :disabled => 'disabled' %>

    <%= f.label :address %>
    <%= f.text_field :address, :disabled => 'disabled' %>

    <%= f.label :postal4 %>
    <%= f.text_field :postal4, :disabled => 'disabled' %>

    <%= f.label :postal3 %>
    <%= f.text_field :postal3, :disabled => 'disabled' %>

    <%= f.label :city %>
    <%= f.text_field :city, :disabled => 'disabled' %>

    <%= f.label :municipality_id %>
    <%= f.text_field :municipality_id, :value => "#{Municipality.find( @club.municipality_id ).name}", :disabled => 'disabled' %>

    <%= f.label :phone %>
    <%= f.text_field :phone, :disabled => 'disabled' %>

    <%= f.label :email %>
    <%= f.text_field :email, :disabled => 'disabled' %>

    <%= f.label :president %>
    <%= f.text_field :president, :disabled => 'disabled' %>

    <%= f.label :url %>
    <%= f.text_field :url, :disabled => 'disabled' %>

    <%= f.label :active %>
    <%= f.check_box :active, :disabled => 'disabled' %>


    <br/><br/>

    <%= link_to 'Editar', edit_club_path(@club), class: "btn btn-group-sm btn-info" %>
    <%= link_to 'Voltar AtrÃ¡s', clubs_path, class: "btn btn-group-sm btn-info" %>
    </div>
  </div>
<% end %>
