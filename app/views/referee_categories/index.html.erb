<% provide(:title, 'Categorias de Arbitragem') %>
<h1>Categorias de Arbitragem</h1>

<table class="table">
  <thead>
    <tr>
      <th>Categoria</th>
      <th>Ordem</th>
      <th>Activo</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @referee_categories.each do |referee_category| %>
      <tr>
        <td><%= referee_category.name %></td>
        <td><%= referee_category.order %></td>
        <td>
            <span class="glyphicon glyphicon-ok" style="color:<%= referee_category.active ? "green" : "red" %>"></span>
        </td>

        <td class="tabButtons">
          <%= link_to '<span class="glyphicon glyphicon-eye-open"></span>'.html_safe, referee_category, class: "btn btn-group-md btn-info", title: "Ver" %>
          <%= link_to "<span class='glyphicon glyphicon-edit'></span>".html_safe, edit_referee_category_path(referee_category), class: "btn btn-group-md btn-success", title: "Editar" %>
          <%= link_to '<span class="glyphicon glyphicon-remove"></span>'.html_safe, referee_category, method: :delete, data: { confirm: 'Tem a certeza?' }, class: "btn btn-group-md btn-danger", title: "Apagar" %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>

<br>

<%= link_to '<span class="glyphicon glyphicon-plus"></span> Nova Categoria de Arbitragem'.html_safe, new_referee_category_path, class: "btn btn-group-md btn-success", title: "Nova Categoria de Arbitragem" %>
