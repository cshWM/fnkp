<% provide(:title, 'Graduação') %>
<h1>Graduação</h1>

<table class="table">
  <thead>
    <tr>
      <th>Graduação</th>
      <th>Ordem</th>
      <th>Preço</th>
      <th>Activo</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @graduations.each do |graduation| %>
      <tr>
        <td><%= graduation.name %></td>
        <td><%= graduation.order %></td>
        <td><%= graduation.price %></td>
        <td>
            <span class="glyphicon glyphicon-ok" style="color:<%= graduation.active ? "green" : "red" %>"></span>
        </td>

        <td class="tabButtons">
          <%= link_to '<span class="glyphicon glyphicon-eye-open"></span>'.html_safe, graduation, class: "btn btn-group-md btn-info", title: "Ver" %>
          <%= link_to "<span class='glyphicon glyphicon-edit'></span>".html_safe, edit_graduation_path(graduation), class: "btn btn-group-md btn-success", title: "Editar" %>
          <%= link_to '<span class="glyphicon glyphicon-remove"></span>'.html_safe, graduation, method: :delete, data: { confirm: 'Tem a certeza?' }, class: "btn btn-group-md btn-danger", title: "Apagar" %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>

<br>

<%= link_to '<span class="glyphicon glyphicon-plus"></span> Nova Graduação'.html_safe, new_graduation_path, class: "btn btn-group-md btn-success", title: "Nova Graduação" %>
