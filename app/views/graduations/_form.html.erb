<%= form_for(@graduation) do |f| %>

  <%= render 'layouts/inner_error_messages', {:msg => @graduation} %>


      <%= f.label :name, "Graduação" %>
      <%= f.text_field :name %>

      <%= f.label :order, "Ordem" %>
      <%= f.text_field :order %>

      <%= f.label :price, "Preço" %>
      <%= f.text_field :price %>

      <%= f.label :active, "Activo" %>
      <%= f.check_box :active %>

      <br/><br/>

      <%= f.submit "Gravar", class: "btn btn-md btn-success" %>


<% end %>
