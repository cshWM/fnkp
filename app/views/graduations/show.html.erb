<% provide(:title, "Categoria: #{@graduation.name}" ) %>

<%= form_for(@graduation, :html => { :class => "form-horizontal" }) do |f| %>
  <%= render 'layouts/inner_error_messages', {:msg => @graduation} %>

  <h1><%= @graduation.name %></h1>

  <div class="form-single">

    <%= f.label :order, "Ordem" %>
    <%= f.text_field :order, :disabled => 'disabled' %>

    <%= f.label :price, "Preço" %>
    <%= f.text_field :price, :disabled => 'disabled' %>

    <%= f.label :active, "Activa" %>
    <%= f.check_box :active, :disabled => 'disabled' %>

    <br/><br/>

    <%= link_to "<span class='glyphicon glyphicon-edit'></span>".html_safe, edit_graduation_path(@graduation), class: "btn btn-group-md btn-success", title: "Editar" %>
    <%= link_to '<span class="glyphicon glyphicon-th-list"></span>'.html_safe, graduations_path, class: "btn btn-group-md btn-info", title: 'Voltar Atrás' %>

  </div>
<% end %>

