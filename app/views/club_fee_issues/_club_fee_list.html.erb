<% else %>
  <%= link_to 'Criar Quota Actual', "/createCurrentClubFeeIssue?club_id=#{@club.id}&club_fee_id=#{@club_fee_current.id}&clubdetail=1", class: "btn btn-group-sm btn-info" %>
<% end %>
